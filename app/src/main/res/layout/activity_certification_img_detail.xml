<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".CertificationImgDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        >

        <ImageButton
            android:id="@+id/btn_esc"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/transparency"
            app:srcCompat="@drawable/btn_prev_32" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/selected_img"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img_deafault" />

    <Button
        android:id="@+id/btn_report"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        app:layout_constraintTop_toBottomOf="@+id/selected_img"
        app:layout_constraintStart_toStartOf="@+id/selected_img"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="신고" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/btn_report"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/selected_img"
        app:layout_constraintBottom_toBottomOf="@+id/btn_report"
        android:background="@drawable/button_custom"
        android:backgroundTint="@color/white"
        android:textColor="@color/grey2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="닫기" />

</androidx.constraintlayout.widget.ConstraintLayout>