<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Join2Fragment">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="17dp"
        android:hint="@string/name"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        />
    <EditText
        android:id="@+id/et_mail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        android:layout_marginTop="9dp"
        android:hint="@string/email"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_mail"
        android:layout_marginTop="9dp"
        android:hint="@string/phone"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/et_form_short"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_search_address"
        app:layout_constraintTop_toBottomOf="@+id/et_phone"
        android:layout_marginTop="9dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/address"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        />

    <Button
        android:id="@+id/btn_search_address"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.27"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/et_address"
        app:layout_constraintBottom_toBottomOf="@id/et_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_address"
        android:layout_marginEnd="16dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_search"
        android:text="주소찾기"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/et_address_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_address"
        android:layout_marginTop="9dp"
        android:hint="@string/address_detail"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_custom"
        android:text="다음"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_address_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>