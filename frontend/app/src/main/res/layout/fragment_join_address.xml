<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinAddressFragment">

    <ImageView
        android:id="@+id/btn_esc"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/btn_prev_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@+id/btn_esc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="86dp"
        android:hint="@string/name"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.68"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        android:layout_marginTop="9dp"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:background="@drawable/et_form_short"
        android:inputType="text"
        android:hint="@string/address"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btn_search_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_search"
        android:text="주소찾기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/et_address"
        app:layout_constraintTop_toTopOf="@+id/et_address"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_address_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_address"
        android:layout_marginTop="9dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle"
        android:inputType="text"
        android:hint="@string/address_detail"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        />

    <Button
        android:id="@+id/btn_to_join_complt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_address_detail"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_custom"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>