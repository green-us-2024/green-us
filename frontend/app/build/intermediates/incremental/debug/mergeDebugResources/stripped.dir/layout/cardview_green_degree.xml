<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/green_degree_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/greening_title_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/greening_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/linearProgressIndicator"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:indeterminate="false"
            android:progress="70"
            card_view:indicatorColor="@color/green"
            card_view:trackColor="@color/grey"
            card_view:trackCornerRadius="100dp"
            card_view:trackThickness="10dp"
            tools:layout_editor_absoluteX="16dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>